<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview_item_movie"
    android:layout_width="@dimen/item_movie_width"
    android:layout_height="@dimen/item_movie_height"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/card_corner_radius"
    android:elevation="@dimen/card_elevation" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/activity_black_background">

        <ImageView
            android:id="@+id/thumbnail_movie"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_movie_image_height"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/title_movie"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_movie_title_height"
            android:padding="@dimen/element_horizontal_margin"
            android:layout_below="@+id/thumbnail_movie"
            android:textSize="@dimen/item_movie_title_size"
            android:textColor="@color/colorTextIcon"
            android:maxLines="2"
            android:gravity="center_vertical" />
    </RelativeLayout>

</android.support.v7.widget.CardView>